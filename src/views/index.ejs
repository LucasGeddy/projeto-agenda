<%- include('includes/head', { pageTitle: 'Agenda - Página Inicial' }) %>
  <%- include('includes/navbar') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-5">
          <h1 class="display-1 text-center">Agenda</h1>
          <% if (contatos.length > 0) { %>
            <p class="text-center lead">Seus contatos abaixo:</p>

            <%- include('includes/messages') %>

            <div class="responsive-table">
              <table class="table my-3">
                <% contatos.forEach(contato => { %>
                  <tr>
                    <td><%= contato.nome %></td>
                    <td><%= contato.sobrenome %></td>
                    <td><%= contato.email %> </td>
                    <td><%= contato.telefone %></td>
                    <td><a href="/contato/index/<%= contato._id %>">Editar</a></td>
                    <td><a class="text-danger" href="/contato/delete/<%= contato._id %>">Excluir</a></td>
                  </tr>
                <% }); %>
              </table>
            </div>
          <% } else if (usuario) { %>
            <p class="text-center lead">Cadastre um contato para começar a usar a Agenda!</p>
          <% } else { %>
            <p class="text-center lead">Cadastre-se para começar a usar a Agenda!</p>
          <% } %>
        </div>

        <div class="col-lg-2"></div>
      </div>
    </div>

<%- include('includes/footer') %>
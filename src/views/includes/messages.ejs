<% if (erros.length > 0) { %>

<div class="row">
    <div class="col my-3">
        <div class="alert alert-danger">
            <% erros.forEach(erro => { %>
                <%= erro %><br>
            <% }); %>
        </div>
    </div>
</div>

<% } %>

<% if (successo.length > 0) { %>

    <div class="row">
        <div class="col my-3">
            <div class="alert alert-success">
                <% successo.forEach(msg => { %>
                    <%= msg %><br>
                <% }); %>
            </div>
        </div>
    </div>
    
<% } %>
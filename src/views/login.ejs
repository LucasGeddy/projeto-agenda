<%- include('includes/head', { pageTitle: 'Agenda - Login' }) %>
<%- include('includes/navbar') %>

  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>

      <div class="col-lg-8 my-5">
        <h1 class="display-1 text-center">Entre ou Cadastre-se</h1>
        <p class="text-center lead">Faça login ou crie sua conta abaixo:</p>

        <%- include('includes/messages'); %> 

        <div class="row">
          <div class="col-lg">
            <h4>Faça seu Cadastro</h4>
            <p>Se você ainda não possui uma conta, cadastre-se abaixo:</p>
            <form action="/login/register" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="mb-3">
                <label class="form-label">E-Mail</label>
                <input type="email" class="form-control" name="email">
              </div>
              <div class="mb-3">
                <label class="form-label">Senha</label>
                <input type="password" class="form-control" name="password">
              </div>
              <button type="submit" class="btn btn-primary">Criar Conta</button>
            </form>
          </div>
          <div class="col-lg">
            <h4>Faça seu Login</h4>
            <p>Se você já é cadastrado, faça seu login abaixo:</p>
            <form action="/login/login" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="mb-3">
                <label class="form-label">E-Mail</label>
                <input type="email" class="form-control" name="email">
              </div>
              <div class="mb-3">
                <label class="form-label">Senha</label>
                <input type="password" class="form-control" name="password">
              </div>
              <button type="submit" class="btn btn-primary">Entrar</button>
            </form>
          </div>
        </div>
      </div>

      

      <div class="col-lg-2"></div>
    </div>
  </div>

  <%- include('includes/footer') %>